	wtr="curl wttr.in" \
	myip="curl ifconfig.co" \
	u='app-cleaner.sh' \
	wpass='wifi-password' \
	myip='curl ifconfig.co'

# Navigation
alias \
	..='cd ..' \
	...='cd ../..' \
	.3='cd ../../..' \
	.4='cd ../../../..' \
	.5='cd ../../../../..'

# brew
alias brewsyu='brew upgrade && cd $HOME/.config/brew && brew bundle -v && brew doctor --verbose && cd && brew cu -a -f'   # update all brew pkgs
alias brewfcrt='cd $HOME/.config/brew && brew bundle dump --describe && cd'    # create brewfile in $HOME/config/brew
alias brewfupd='cd $HOME/.config/brew && brew bundle dump --force --describe && cd'    # update brewfile
alias cleanup='brew autoremove && brew cleanup && brew doctor --verbose'    # remove orphaned packages
alias brewdep='brew deps --tree --installed'    # list dependencies

# Change "ls" to "exa"
alias \
	ls='exa -al --color=always --group-directories-first' \
	la='exa -a --color=always --group-directories-first' \
	ll='exa -l --color=always --group-directories-first' \
	lt='exa -aT --color=always --group-directories-first' \
	l.='exa -a | egrep "^\."'

# Colorize grep output (good for log files)
alias \
	grep='grep --color=auto' \
	egrep='egrep --color=auto' \
	fgrep='fgrep --color=auto'

# Colorize commands when possible.
alias \
	diff="diff --color=auto" \
	ccat="highlight --out-format=ansi"

# Verbosity and settings that you pretty much just always are going to want.
alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -vI" \
	bc="bc -ql" \
	mkd="mkdir -pv" \
	yt="youtube-dl --add-metadata -i" \
	yta="yt -x -f bestaudio/best" \
	ffmpeg="ffmpeg -hide_banner"

# These common commands are just too long! Abbreviate them.
